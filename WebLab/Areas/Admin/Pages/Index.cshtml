@page
@model WebLab.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Military[0].MilitaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Military[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Military[0].Force)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Military[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Military[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Military) {
        <tr>
            <td>
                <img src="~/Images/@item.Image" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MilitaryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Force)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.MilitaryGroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MilitaryId" class="btn btn-outline-info">
                    <span class="fa fa-pencil"></span>
                </a>
                <a asp-page="./Delete" asp-route-id="@item.MilitaryId" class="btn btn-outline-danger">
                    <span class="fa fa-close"></span>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
